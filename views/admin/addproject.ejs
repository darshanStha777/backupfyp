<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../include/head.ejs") %>
        <style>
            .inputicon {
                position: relative;
                top: -32px;
                left: 20px;
            }
        </style>
</head>

<body>
    <%- include("../include/navbar.ejs") %>
        <!--Main layout-->
        <main style="margin-top: 108px; margin-bottom: 75px;">
            <section class="container-fluid">
                <form action="/admin/addprojectdetails" method="POST" enctype="multipart/form-data">
                    <div class="row justify-content-around  p-3">
                        <div class="col-md-6 mb-4 ">
                            <!-- Card -->
                            <div class="card p-3 border-lg">
                                <div class="px-3 py-2 border-bottom">
                                    <!-- Title -->
                                    <h4 class="card-title m-3"><a>Project Details</a></h4>
                                </div>

                                <!-- Card content -->
                                <div class="card-body">
                                    <div class="row  justify-content-around ">

                                        <div class=" col-md-6 form-group mb-4">
                                            <input required type="text" class="form-control p-2 " name="projectName" placeholder="Project Name">
                                        </div>
                                        <div class=" col-md-6 form-outline mb-4">
                                            <select class="form-select p-2" name="projectcategory" aria-label="Default select example">
                                        <option value="ecommerce">Ecommerce</option>
                                        <option value="college website">College WEbsite</option>
                                        <option value="business">Business Website</option>
                                      </select>
                                        </div>
                                    </div>
                                    <div class="row  justify-content-around  ">

                                        <div class=" col-md-6 form-group mb-4">
                                            <input required type="text" class="form-control p-2  " name="projectprice" placeholder="Total Price">

                                        </div>
                                        <div class="col-md-6 form-group mb-4">
                                            <input required type="text" class="form-control p-2  " name="priceAdvance" placeholder="Advance">
                                        </div>

                                    </div>

                                    <div class="row justify-content-around mt-3">
                                        <div class="col-md-6">
                                            <label>Start Project date</label>
                                            <input required class="form-control p-2" name="projectstartdate" type="date">
                                        </div>
                                        <div class="col-md-6">
                                            <label>End Project date</label>
                                            <input required class="form-control p-2" name="projectenddate" type="date">
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="col-md-6 mb-4 ">
                            <!-- Card -->
                            <div class="card p-3">
                                <div class="px-3 py-2 border-bottom">
                                    <!-- Title -->
                                    <h4 class="card-title m-3"><a>Client Details</a></h4>
                                </div>

                                <!-- Card content -->
                                <div class="card-body">
                                    <div class="row  justify-content-around ">
                                        <div class=" col-md-6 form-group ">
                                            <select class="form-select p-2" name="clientId" aria-label="Default select example">

                                            <% for(i=0; i<clinetdetails.length; i++) { %>

                                                <option value="<%= clinetdetails[i].id  %>"> <%= clinetdetails[i].clientName  %>  </option>
                                                
                                         
                                            <% } %>
                                        </select>

                                        </div>
                                        <div class="row  mt-3">
                                            <div class="col-md-12">
                                                <label>Client Requirement </label>
                                                <input required class="form-control p-2" type="file" name="clientrequirement">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="row ">
                        <div class="p-2 d-flex justify-content-center"> <input type="submit" class="btn btn-primary" value="Add Project"></div>

                    </div>
                </form>
            </section>

        </main>
        <!--Main layout-->


        <%- include("../include/footer.ejs") %>

            <script>
                $('#summernote').summernote({
                    placeholder: 'Hello stand alone ui',
                    tabsize: 2,
                    height: 120,
                    toolbar: [

                        ['style', ['style']],
                        ['font', ['bold', 'underline', 'clear']],
                        ['color', ['color']],
                        ['fontname', ['fontname']],
                        ['fontsize', ['fontsize']],
                        ['para', ['ul', 'ol', 'paragraph']],
                        ['table', ['table']],
                        ['insert', ['link', 'picture', 'video']],
                        ['view', ['fullscreen', 'codeview', 'help']]
                    ]


                });
            </script>
            <!-- MDB -->
            <% if(projectMessage) {%>
                <script>
                    Toastify({
                        text: "New Project Added",
                        backgroundColor: "rgba(21,167,68,1)",
                        position: "right",
                        duration: 1000,
                        className: "info",
                    }).showToast();
                </script>
                <% } %>


</body>

</html>